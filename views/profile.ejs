<%- include('partials/header') %>

<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-sm-8 col-md-6 col-lg-4">
      <div class="card shadow-lg">
        <div class="card-body">
          <h2 class="text-center mb-4">Profile</h2>

          <h4>Welcome, <%= username %>!</h4>
          <p>Email: <%= email %></p>

          <h4 class="mt-4">Your Anime List</h4>
          <ul class="list-group">
            <% if (animeTitles && animeTitles.length > 0) 
            { %> 
                <%animeTitles.forEach(function(anime) 
                { %>
                    <li class="list-group-item"><%= anime %></li>
             <% }) %>
            <% } else 
            { %>
            <li class="list-group-item">No anime added yet.</li>
            <% } %>
          </ul>

          <a href="/logout" class="btn btn-dark w-100 mt-3">Logout</a>
        </div>
      </div>
    </div>
  </div>
</div>

<%- include('partials/footer') %>
